rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Slike predmetov - branje javno, pisanje le za prijavljene uporabnike z verificiranim emailom
    match /items/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.token.email_verified == true
        && fileName.matches(request.auth.uid + '_.*');
    }

    // Profilne slike uporabnikov
    match /profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId;
    }

    // Privzeto zavrni vse ostalo
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
