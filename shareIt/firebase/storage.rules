rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for item images.
    match /items/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
